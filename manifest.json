{
  "manifest_version": 3,
  "name": "Flow Downloader Auto | Tandev.foto",
  "version": "1.0.2",
  "description": "Tool tải video tự động với Giao diện thân thiện & Smart Queue.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "notifications" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flow Downloader"
  },
  "background": {
    "service_worker": "background.js"
  }
}